@import 'nib'

@font-face
  font-family: icons
  src url("fonts/icons.eot")
  src url("fonts/icons.eot?#iefix") format('embedded-opentype'), url("fonts/icons.woff") format('woff'), url("fonts/icons.ttf") format('truetype'), url("fonts/icons.svg#icons") format('svg')
  font-weight normal
  font-style normal


body
  max-width  1500px
  margin     8px auto
  padding    0 8px
  font-family 'Open Sans', 'Segoe UI', Ubuntu, Arial, sans-serif
  font-size 18px
  font-weight 300

.small
  font-size 0.6em
  font-weight 400

h1, h2
  font-weight 300

h1
  font-size 1.5em

h2
  font-size 1.2em


h3, h4
  font-weight 400
  font-size 1em

b
  font-weight 700

a
  text-decoration none

pre, code
  font-family 'Anonymous Pro', monospace
  font-weight 400

body > section
  display block
  float left

.clear
  clear both

// icons

.icon:before
  font-family icons
  display inline-block
  text-align right
  padding-right 7px
  width 24px


.icon.doc:before { content: '\e730'; } /* '' */
.icon.rss-alt:before { content: '\e73b'; } /* '' */
.icon.terminal:before { content: '\e7ac'; } /* '' */
.icon.twitter-bird:before { content: '\f303'; } /* '' */
.icon.github:before { content: '\f308'; } /* '' */
.icon.skype:before { content: '\f30b'; } /* '' */
.icon.globe:before { content: '𝌍'; } /* '\1d30d' */
.icon.user:before { content: '👤'; } /* '\1f464' */

// content

div#content
  clear both
  margin 0 -8px
  > div.row > section
    padding 0 8px
    > ul, > ul > li
      list-style none
      margin 0
      padding 0
    > dl > dd
      margin 0 0 16px 0
      font-size 0.8em

  @media (min-width: 700px)
    > div.row > section
      display table-cell
      width 50%

  @media (min-width: 960px)
    > div.row
      display table-cell
      width 50%
