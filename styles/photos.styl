@import 'nib'

@keyframes opacitate
  from
    opacity 0
  to
    opacity 1

div#photos
  transition color 0.5s, background-color 0.5s
  clear both
  padding 0 16px

  > *
    transition max-width 0.5s
    max-width 1500px
    margin auto

  > div#thumbs
    overflow hidden
    height 83px
    > a
      display block
      float left
      > img
        transition opacity 0.3s
        opacity 0.7
        display block
        border none
        margin  4px 4px 4px 0
    > a:hover, > a.active
      > img
        opacity 1
  > div#thumbs:hover
    > a.active > img
      opacity 0.7
    > a.active:hover > img
      opacity 1

  > div#viewer
    padding-bottom 4px
    transition opacity 0.4s
    opacity 0.1
    > div.preview
      animation-duration 1s
      animation-name opacitate
      background inherit
      > img
        display    block
        margin     auto
        max-width  100%
        max-height 100%

div#photos.active
  > *
    max-width 100%
  > div#viewer
    opacity 1
