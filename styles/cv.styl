cv_width = 860px

body.cv
  > div#top
    max-width cv_width

div#cv
  max-width cv_width
  min-width 480px
  margin 0 auto
  padding 0 16px

  .center
    margin 0 auto

  h2
    margin-top 1em

  td:first-child
    text-align right

  table.aligned td:first-child
    width 90px

  td > ul
    padding 0
    margin 0
    list-style none

  .right
    float right

  .meta
    font-size 1em
    a
      margin-right 0.5em

  footer
    margin-top 3em

  @media print
    font-size 0.7em
    max-width 100%
    margin 0
    padding 0
    color black
    background-color white

    footer
      display none

    table.aligned td:first-child
      width 75px

  @media screen and (max-width: 780px)
    table.aligned
      font-size 0.87em
      td:first-child
        width 75px

  @media screen and (max-width: 600px)
    table.aligned
      font-size 0.7em
      td:first-child
        width 62px

