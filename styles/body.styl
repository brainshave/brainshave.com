@import 'nib'

html
  overflow-y scroll

body
  transition  color 0.5s, background-color 0.7s
  margin      0
  padding     8px 0 0 0
  font-family 'Source Sans Pro', 'Segoe UI', Ubuntu, Arial, sans-serif
  font-size   20px
  font-weight 300

@media (max-width: 400px)
  body
    font-size 14px
    font-weight 400
