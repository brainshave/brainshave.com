doctype

classes = 'dark'

html
  head
    block head
      meta(charset='utf-8')
      title: block title
      link(rel='stylesheet', type='text/css', href='http://fonts.googleapis.com/css?family=Source+Sans+Pro:200,300,400,600,700,900,200italic,300italic,400italic,600italic,700italic,900italic|Source+Code+Pro:200,300,400,600,700,900&subset=latin,latin-ext,cyrillic')
