      link(rel='stylesheet', type='text/css', href='/styles/all.css')

  body(class = classes)
    div#top
      a#logo(href="/") S/W
        div.s.block.up.left
        div.s.block.down.right
        div.s.tail.up.right
        div.s.tail.down.left

        div.z.block.down.left
        div.z.block.up.right
        div.z.tail.down.right
        div.z.tail.up.left

        div.w.col.left
        div.w.mid.left
        div.w.mid.right
        div.w.col.right

    div#content
      //BEFORE CONTENT
      block content
      //AFTER CONTENT

    block scripts
      script(type='text/javascript', src='/deps/require.js')
      script(type='text/javascript', src='/app/app.js')
      span#extra-scripts
        //BEFORE SCRIPTS
        block extra-scripts
        //AFTER SCRIPTS
